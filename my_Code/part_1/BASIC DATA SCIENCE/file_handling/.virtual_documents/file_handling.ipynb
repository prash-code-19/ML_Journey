# word search

data = True
line = 1
word = "Prash"

with open("data","r") as f:
    while data: # empty string means false
        data = f.readline()

        if(word in data):
            print(f"{word} found at line {line}")
            break

        line+=1

# spaces btw lines are not empty rather \n so still True












