# before :

squares = []

for i in range(6):
    squares.append(i*i)
print(squares)

# after :

sq = [i*i for i in range(6)]
print(sq)

# format :

## var = [output      iterable      condition]


odd_sq = [i*i for i in range(6) if i%2!=0]
print(odd_sq)


